<mvc:View
    controllerName="com.ndbs.managementplaneui.controller.Upload"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:u="sap.ui.unified"
    xmlns:core="sap.ui.core"
    xmlns:upload="sap.m.upload"
>
    <Page
        id="page"
        showFooter="false"
        showHeader="false"
        showNavButton="false"
        showSubHeader="false"
    >
        <VBox>
            <upload:UploadSet 
                id="usFileAttachments" 
                instantUpload="false" 
                uploadEnabled="true" 
                beforeItemAdded="onCheckFileCount"
                fileTypeMismatch="onFileTypeMismatch" 
                fileTypes="XLSX,DOCX,PPT,PDF" 
                multiple="true" 
                httpRequestMethod="Put" 
                mode="None"
            />
            
            <HBox justifyContent="SpaceBetween">
                <Button text="{i18n>btnExcelUpload}" press="onFileUpload"/>
                <Button text="{i18n>btnClose}" press="onCloseFileUpload"/>
            </HBox>
        </VBox>
    </Page>
</mvc:View>
