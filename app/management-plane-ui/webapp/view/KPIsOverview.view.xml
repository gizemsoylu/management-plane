<mvc:View
    controllerName="com.ndbs.managementplaneui.controller.KPIsOverview"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:core="sap.ui.core"
    xmlns:smartChart="sap.ui.comp.smartchart"
    height="100%"
>
    <Page
        id="page"
        showFooter="false"
        showHeader="false"
        showSubHeader="false"
        showNavButton="false"
    >
        <f:GridContainer containerQuery="true">
            <f:layout>
                <f:GridContainerSettings columnSize="0%"/>
            </f:layout>

            <HBox>
                <layoutData>
                    <f:GridContainerItemLayoutData columns="1" />
                </layoutData>
                <core:Fragment
                    fragmentName="com.ndbs.managementplaneui.fragments.cards.KPIsCard"
                    type="XML"
                />
                <VBox>
                    <layoutData>
                        <f:GridContainerItemLayoutData columns="1" />
                    </layoutData>
                    <core:Fragment
                        fragmentName="com.ndbs.managementplaneui.fragments.cards.KPIsTable"
                        type="XML"
                    />
                    <core:Fragment
                        fragmentName="com.ndbs.managementplaneui.fragments.cards.KPIsChart"
                        type="XML"
                    />
                </VBox>
                <HBox>
                    <layoutData>
                        <f:GridContainerItemLayoutData columns="1" />
                    </layoutData>
                    <core:Fragment
                        fragmentName="com.ndbs.managementplaneui.fragments.cards.KPIsList"
                        type="XML"
                    />
                </HBox>
            </HBox>
        </f:GridContainer>
    </Page>
</mvc:View>
