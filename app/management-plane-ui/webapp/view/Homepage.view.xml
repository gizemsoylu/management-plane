<mvc:View
    controllerName="com.ndbs.managementplaneui.controller.Homepage"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    height="100%"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <FlexBox
            direction="Row"
            id="fbSections"
            items="{path:'/Sections'}"
        >
            <GenericTile
                id="genericTiles"
                header=" {name}"
                class="sapUiLargeMarginBegin sapUiLargeMarginBottom sapUiLargeMarginTop sapUiLargeMarginEnd"
                press="onNavToKPIsOverview"
            >
                <TileContent footer="{type}">
                    <FlexBox direction="Column">
                        <HBox justifyContent="Start">
                            <core:Icon
                                size="40px"
                                src="{sapIcon}"
                                color="Positive"
                                class="sapUiSmallMarginBottom"
                            />
                        </HBox>
                    </FlexBox>
                </TileContent>
            </GenericTile>
        </FlexBox>
          <footer>
            <core:Fragment
                fragmentName="com.ndbs.managementplaneui.fragments.common.MessageToolbar"
                type="XML"
            />
        </footer>
    </Page>
</mvc:View>
