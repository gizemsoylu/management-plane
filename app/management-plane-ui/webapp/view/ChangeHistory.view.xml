<mvc:View
    controllerName="com.ndbs.managementplaneui.controller.ChangeHistory"
    xmlns="sap.suite.ui.commons"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:f="sap.f"
    height="100%"
>
    <m:Page
        showFooter="false"
        showHeader="false"
        showSubHeader="false"
        showNavButton="true"
        navButtonPress="onNavToKPIsDetails"
        class="sapUiSmallMarginEnd"
    >
        <m:FlexBox
            justifyContent="Center"
            alignItems="Center"
        >
            <m:VBox width="95%"  class="sapUiSmallMarginTop">
                <m:Toolbar design="Transparent">
                    <m:ToolbarSpacer />
                    <m:OverflowToolbarButton
                        type="Transparent"
                        icon="sap-icon://decline"
                        press=".onCloseColumnLayout"
                        tooltip="{i18n>closeColumnLayout}"
                    />
                </m:Toolbar>
                <Timeline
                    id="idTimeline"
                    enableDoubleSided="true"
                    groupBy="reportDate"
                    growingThreshold="5"
                    filterTitle="Job Title"
                    sortOldestFirst="true"
                    content="{/ReportHistory}"
                >
                    <content>
                        <TimelineItem
                            id="idTemplateItem"
                            select="onPressItems"
                            icon="{iconType}"
                        >
                            <m:HBox>
                                <m:Avatar
                                    initials="{avatar}"
                                    displayShape="Circle"
                                    displaySize="S"
                                />
                                <m:VBox class="sapUiTinyMarginBegin">
                                    <m:Text
                                        text="{fullName}"
                                        class="boldBlueText"
                                    />
                                    <m:Text
                                        text="{
                                        path: 'reportDate',
                                        type: 'sap.ui.model.type.DateTime',
                                        formatOptions: {
                                            style: 'medium'
                                        }
                                    }"
                                        class="sapUiTinyMarginTop"
                                    />
                                    <m:Text
                                        text="{modifiedType}: {modifiedContent}"
                                        class="sapUiSmallMarginTop"
                                    />
                                </m:VBox>
                            </m:HBox>
                        </TimelineItem>
                    </content>
                </Timeline>
            </m:VBox>
        </m:FlexBox>
    </m:Page>
</mvc:View>
