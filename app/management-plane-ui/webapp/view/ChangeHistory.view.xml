<mvc:View
    controllerName="com.ndbs.managementplaneui.controller.ChangeHistory"
    xmlns="sap.suite.ui.commons"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:f="sap.f"
    height="100%"
>
    <m:Page showFooter="false" showHeader="false" showNavButton="false" showSubHeader="false">
        <f:ShellBar
            id="sbKPIs"
            title="Change History"
            showSearch="false"
            showNavButton="true"
            showNotifications="false"
            navButtonPressed="onNavToKPIsDetails"
        />
        <m:content>
            <Timeline
                id="idTimeline"
                enableDoubleSided="true"
                groupBy="reportDate"
                growingThreshold="0"
                filterTitle="Job Title"
                sortOldestFirst="true"
                content="{/ReportHistory}"
            >
                <content>
                    <TimelineItem
                        id="idTemplateItem"
                        select="onPressItems"
                        icon="{iconType}"
                    >
                        <m:HBox>
                            <m:Avatar
                                initials="{avatar}"
                                displayShape="Circle"
                                displaySize="S"
                            />
                            <m:VBox class="sapUiTinyMarginBegin">
                                <m:Text
                                    text="{fullName}"
                                    class="boldBlueText"/>
                                <m:Text
                                    text="{
                                        path: 'reportDate',
                                        type: 'sap.ui.model.type.DateTime',
                                        formatOptions: {
                                            style: 'medium'
                                        }
                                    }"
                                    class="sapUiTinyMarginTop"/>
                                <m:Text
                                    text="{modifiedType}: {modifiedContent}"
                                    class="sapUiSmallMarginTop"/>
                            </m:VBox>
                        </m:HBox>
                    </TimelineItem>
                </content>
            </Timeline>
        </m:content>
    </m:Page>
</mvc:View>
