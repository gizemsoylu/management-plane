{
  "name": "management-plane",
  "version": "1.0.0",
  "description": "Management Plan",
  "repository": "",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js-community/odata-v2-adapter": "^1.12.11",
    "@sap/cds": "^7",
    "@sap/cds-hana": "^2",
    "@sap/xssec": "^3",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^7",
    "@sap/eslint-plugin-cds": "^3",
    "@types/chai": "^4.3.16",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.9",
    "eslint": "^9",
    "rimraf": "^5.0.7",
    "cds-plugin-ui5": "^0.6.13"
  },
  "scripts": {
    "start": "cds-serve",
    "build-ts": "npx tsc",
    "watch-management-plane-ui": "cds watch --open com.ndbs.managementplaneui/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy management-plane --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "requires": {
      "db": "hana",
      "auth": "xsuaa",
      "destinations": true,
      "html5-repo": true
    }
  },
  "workspaces": [
    "app/*"
  ]
}
